@model CS58_Razor09_Entity_ASP.Pages_Blog.IndexModel
@using CS58_Razor09_Entity_ASP.Pages.Shared
@{
    ViewData["Title"] = "Index";
    int i = 0;
}

<h1>Index</h1>

<form method="get" asp-page="./Index">
    <label>Search</label>
    <input name="SearchString" value=""/>
    <button type="submit">Search</button>
</form>
<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.Article[0].Content)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td>@(++i)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td> *@
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@*Phát sinh Url cho trang Razor*@
@* Url.Page("/Blog/Index", new {p = 10 })*@
@{
    var pagingModel = new _PagingHTLModel() 
    {
        currentPage = Model.currentPage,
        countPages = Model.countPages,
        generateUrl = (int? p) => Url.Page("/Blog/Index", new {p = p})
    };
}
<partial name="_PagingHTL" model="@pagingModel" />
